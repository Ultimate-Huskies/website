{% from 'macro.twig' import icon %}

<!DOCTYPE html>
<!--[if lt IE 7]><html class="no-js ie ie6 lt-ie9 lt-ie8 lt-ie7" {{ site.language_attributes }}> <![endif]-->
<!--[if IE 7]><html class="no-js ie ie7 lt-ie9 lt-ie8" {{ site.language_attributes }}> <![endif]-->
<!--[if IE 8]><html class="no-js ie ie8 lt-ie9" {{ site.language_attributes }}> <![endif]-->
<html class="no-js" {{ site.language_attributes }}>
  <head>
    <meta charset="{{ site.charset }}">
    <meta name="description" content="{{ site.description }}">
    <meta name="robots" content="index,follow" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>
      {{ site.name }}
      {{ wp_title }}
    </title>

    <link rel="profile" href="http://gmpg.org/xfn/11" />
    <link rel="pingback" href="{{ site.pingback_url }}" />
    <link rel="alternate" type="application/rss+xml" title="{{ site.name }} feed" href="{{ site.rss2_urlÂ }}" />
    <link rel="shortcut icon" href="{{ site.theme.link }}/images/favicon.ico" />
    <link rel="apple-touch-icon" href="{{ site.theme.link }}/images/apple-touch-icon.png"/>

    {{ function('wp_head') }}
  </head>
  <body class="{{ body_class }}">
    <div class="container">
      <header>
        <nav class="header__mobile clear">
          <span class="header__links pull-left main_menu__toggle">{{ icon('menu') }}</span>
          <a href="{{ site.url }}" class="header__mobile-logo">
            <svg><use xlink:href="#logo-font" width="100%" height="100%"></use></svg>
          </a>
          {% if page.user.logged_in %}
            <div class="header__additional-actions additional-actions">
              {% block header_actions %}{% endblock %}
            </div>
            <a class="icon-custom-user pull-right" href="{{ page.user.profile.url }}">{{ page.user.profile.image }}</a>
          {% else %}
            <a class="header__links pull-right" href="{{ page.login_url }}">{{ icon('paw') }}</a>
          {% endif %}
        </nav>
        {% block header %}{% endblock %}
      </header>

      <main>
        {% include 'layout/main_menu.twig' %}
        {% block content %}{% endblock %}
      </main>

      <footer>
        {% include 'layout/footer.twig' %}
      </footer>
    </div>

    {{ function('wp_footer') }}
    {% include 'images/logo.svg' %}
    {% include 'images/icons.svg' %}
  </body>
</html>
