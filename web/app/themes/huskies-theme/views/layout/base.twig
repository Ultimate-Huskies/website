<html class="no-js" {{ site.language_attributes }}>
  <head>
    <meta charset="{{ site.charset }}">
    <meta name="description" content="{{ site.description }}">
    <meta name="robots" content="index,follow" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>
      {{ site.name }}
      {{ wp_title }}
    </title>

    <link rel="profile" href="http://gmpg.org/xfn/11" />
    <link rel="pingback" href="{{ site.pingback_url }}" />
    <link rel="alternate" type="application/rss+xml" title="{{ site.name }} feed" href="{{ site.rss2_urlÂ }}" />
    <link rel="shortcut icon" href="{{ site.theme.link }}/images/favicon.ico" />
    <link rel="apple-touch-icon" href="{{ site.theme.link }}/images/apple-touch-icon.png"/>

    {{ function('wp_head') }}
  </head>
  <body class="{{ body_class }}" id="skrollr-body">
    {% include 'layout/main_menu.twig' %}

    <div class="content">
      <header class="header">
        {% include 'layout/header.twig' %}
        {% block header %}{% endblock %}
      </header>

      <main class="main">
        {% block content %}{% endblock %}
      </main>

      <footer class="footer">
        {% include 'layout/footer.twig' %}
      </footer>
    </div>

    {{ function('wp_footer') }}
    {% include 'images/logo.svg' %}
  </body>
</html>
