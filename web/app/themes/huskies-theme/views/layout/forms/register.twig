{% from 'layout/forms/base.twig' import render %}
{% from _self import content %}

{% macro content() %}
  {% from 'macro.twig' import password_strength_meter %}

  <fieldset class="form__section form__section--text-input">
    <input type="text" id="register_user" name="register_user" required>
    <label for="register_user">{{ __('user', 'huskies') }}</label>
  </fieldset>
  <fieldset class="form__section form__section--text-input">
    <input type="email" id="register_email" name="register_email" required>
    <label for="register_email">{{ __('email', 'huskies') }}</label>
  </fieldset>
  <fieldset class="form__section form__section--text-input">
    <input type="password" id="register_password1" name="register_password1" required>
    <label for="register_password1">{{ __('password', 'huskies') }}</label>
  </fieldset>
  <fieldset class="form__section form__section--text-input">
    <input type="password" id="register_password2" name="register_password2" required>
    <label for="register_password2">{{ __('repeat password', 'huskies') }}</label>
  </fieldset>
  {{ password_strength_meter('register_password1', 'register_password2') }}
{% endmacro %}

{{ render(page, 'register', __('Register', 'huskies'), content()) }}
